            .modal-body
              .container-fluid
                .container-fluid(style='padding:1rem 4rem 1rem 4rem;')
                  .row
                    .col-md-12
                      .form-group
                        label.control-label Class Name
                        input.form-control.addDisable(type='text' name='classname' title='Please avoid using leading or trailing spaces and multiple spaces between two words.' minlength='3' maxlength='25' onkeypress='return restrictCharacters(this, event, alphaNumOnly)' pattern='^([A-Za-z]+ )+[A-Za-z]+$|^[A-Za-z]+$' required)
