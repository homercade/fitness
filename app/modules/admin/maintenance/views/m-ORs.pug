    // MODAL DELETE
    #deletemodal.modal.fade(tabindex='-1', role='dialog', aria-labelledby='myModalLabel', aria-hidden='true')
      .modal-dialog
        .modal-content
          .modal-header
            button.close(type='button', data-dismiss='modal', aria-hidden='true') ×
            h4#myModalLabel.modal-title Remove Class
          form(action='/classes/delete', method='POST' id='del-class')
            .modal-body
              .container-fluid
                .container-fluid(style='padding:1rem 4rem 1rem 4rem;')
                  .row
                    .col-md-12
                      .form-group
                        h4 Delete this class?
                    input.hidden#id(type='text' name='id')

            .modal-footer
              button.btn.btn-default(type='button', data-dismiss='modal') Close
              button.btn.btn-default(type='submit' id='btn-del-class') Delete

    // MODAL ADD CLASS
    #add.modal.fade(tabindex='-1', role='dialog', aria-labelledby='myModalLabel', aria-hidden='true')
      .modal-dialog
        .modal-content
          .modal-header
            button.close(type='button', data-dismiss='modal', aria-hidden='true') ×
            h4#myModalLabel.modal-title Add Class
          form(action='/', method='POST' autocomplete='off' id='add-class')
            .modal-body
              .container-fluid
                .container-fluid(style='padding:1rem 4rem 1rem 4rem;')
                  .row
                    .col-md-12
                      .form-group
                        label.control-label OR Number
                        input.form-control(type='text' name='classname' onkeypress='return restrictCharacters(this, event, alphanumericOnly)' maxlength='25' required)
            .modal-footer
              button.btn.btn-default(type='button', data-dismiss='modal') Close
              button.btn.btn-primary(id='btn-add-class') Add Class
    // MODAL EDIT CLASS
    #editmodal.modal.fade(tabindex='-1', role='dialog', aria-labelledby='myModalLabel', aria-hidden='true')
      .modal-dialog
        .modal-content
          .modal-header
            button.close(type='button', data-dismiss='modal', aria-hidden='true') ×
            h4#myModalLabel.modal-title Edit Class
          form(action='/classes/edit', method='POST' id='edit-class')
            .modal-body
              .container-fluid
                .container-fluid(style='padding:1rem 4rem 1rem 4rem;')
                  input#id.hidden(type='text' name='id')
                  .row
                    .col-md-12
                      .form-group
                        label.control-label Class Name
                        input#name.form-control(type='text' name='classname' onkeypress='return restrictCharacters(this, event, alphaOnly)' maxlength='25' required)
                  .row
                    .col-md-12
                      label.control-label Description
                      .form-group
                        textarea#desc.form-control(style='resize:none', name='classdesc', rows='3')
            .modal-footer
              button.btn.btn-default(type='button', data-dismiss='modal') Close
              button.btn.btn-primary(type='submit' id='btn-edit-class') Save
