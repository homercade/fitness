include ../../../../templates/head 

block main
	section#main-content
		section.wrapper.site-min-height
			.row.mt
				.col-md-12
					.content-panel
						.container-fluid
							table.table.table-striped.table-advance.table-hover
								h4
									| All Branch
									button.btn.btn-theme(style='margin-left: 5px;', type='button', data-toggle='modal', data-target='#add')
										i.fa.fa-home
										|  Add Branch
								thead
									tr
										th
											i.fa.fa-home
											|  Name
										th
											i.fa.fa-map-marker-alt
											|  Address
										th
											i.fa.fa-calendar
											|  Date Added
										th
											i.fa.fa-user
											|  Added by
										th
											i.fa.fa-user
											|  Manager
										th
											i.fa.fa-edit
											|  Action
								tbody
									each br in branches               
										tr
											td #{br.branchname}
											td #{br.branchstreetname} #{br.branchcity}
											td #{br.Dateadded} 
											td #{br.addedby}
											td
												if br.user==NULL
													|	NONE YET
												else if br.user!=NULL
													| #{br.user}
											td
												button#edit.btn.btn-success.btn-xs(data-toggle='modal', data-trigger='hover', data-placement='top', data-content='Edit Account', data-target='#editmodal' data-id=br.branchID data-name=br.branchname data-sname=br.branchstreetname data-city=br.branchcity data-oldid=br.user)
													i.fa.fa-edit
												if br.user==NULL
													button.btn.btn-danger.btn-xs(data-toggle='modal', data-trigger='hover', data-placement='top', data-content='Remove Account Permanently' data-target='#deletemodal' data-id=br.branchID)
														i.fa.fa-trash-alt
					// /content-panel
					// MODAL ADD MEMBER
					#add.modal.fade(tabindex='-1', role='dialog', aria-labelledby='myModalLabel', aria-hidden='true')
						.modal-dialog
							.modal-content
								.modal-header
									button.close(type='button', data-dismiss='modal', aria-hidden='true') ×
									h4#myModalLabel.modal-title Add Branch
								form(action='/branch', method='POST' autocomplete='off' id='add-branch')
									.modal-body
										.container-fluid
											.container-fluid(style='padding:1rem 4rem 1rem 4rem;')
												.row
													.col-md-12
														.form-group
															label.control-label Franchise Name
															input.form-control(type='text' name='branchname' onkeypress='return restrictCharacters(this, event, alphaOnlyD)' pattern='^([A-Za-z]+ )+[A-Za-z]+$|^[A-Za-z]+$' title='Please avoid using leading or trailing spaces and multiple spaces between two words.' required)
												.row
													.col-md-8
														.form-group
															label.control-label Full Address
															input#snum.form-control(type='text', placeholder='Street number and address..' onkeypress='return restrictCharacters(this, event, alphaNumOnly)' pattern='^([A-Za-z]+ )+[A-Za-z]+$|^[A-Za-z]+$' title='Please avoid using leading or trailing spaces and multiple spaces between two words.' maxlength='105' name='street' required)
													.col-md-4
														.form-group
															input.form-control(style='margin-top:17%;', type='text', placeholder='City..' onkeypress='return restrictCharacters(this, event, alphaOnly)' pattern='^([A-Za-z]+ )+[A-Za-z]+$|^[A-Za-z]+$' title='Please avoid using leading or trailing spaces and multiple spaces between two words.' maxlength='25' name='city' required)
													//- .col-md-12
													//- 	.form-group
													//- 		label.control-label Staff In-charge
													//- 		select#staff.form-control(name='user' required)
													//- 			each dr in drops
													//- 				option.hidden(value='') Select Staff...
													//- 				option(value=''+dr.userid) #{dr.userfname} #{dr.userlname}

									.modal-footer
										button.btn.btn-default(type='button', data-dismiss='modal') Close
										button.btn.btn-primary(id='btn-add-branch') Add Branch
					// MODAL EDIT Branch
					#editmodal.modal.fade(tabindex='-1', role='dialog', aria-labelledby='myModalLabel', aria-hidden='true')
						.modal-dialog
							.modal-content
								.modal-header
									button.close(type='button', data-dismiss='modal', aria-hidden='true') ×
									h4#myModalLabel.modal-title Edit Branch Information
								form(action='/branch/edit', method='POST' id='edit-branch')
									.modal-body
										.container-fluid
											.container-fluid(style='padding:1rem 4rem 1rem 4rem;')
												input.hidden#id(type='text' name='id')
												.row
													.col-md-12
														.form-group
															label.control-label Franchise Name
															input#name.form-control(type='text' name='branch' onkeypress='return restrictCharacters(this, event, alphaOnlyD)' required)
												.row
													.col-md-8
														.form-group
															label.control-label Full Address
															input#sname.form-control(type='text', placeholder='Street number and address..' onkeypress='return restrictCharacters(this, event, alphaNumOnlyPlus)' maxlength='105' name='street' required)
													.col-md-4
														.form-group
															input#city.form-control(style='margin-top:17%;', type='text', placeholder='City..' onkeypress='return restrictCharacters(this, event, alphaOnly)' maxlength='25' name='city' required)
													//- .col-md-12       
													//- 	.form-group
													//- 		label.control-label Staff In-charge
													//- 		select#staff.form-control(name='user')
													//- 			each dr in drops
													//- 				option.hidden(value='') Select Staff...
													//- 				option(value=''+dr.userid) #{dr.userfname} #{dr.userlname}                

									.modal-footer
										button.btn.btn-default(type='button', data-dismiss='modal') Close
										button.btn.btn-primary(id='btn-edit-branch') Save

					// MODAL DELETE
					#deletemodal.modal.fade(tabindex='-1', role='dialog', aria-labelledby='myModalLabel', aria-hidden='true')
						.modal-dialog
							.modal-content
								.modal-header
									button.close(type='button', data-dismiss='modal', aria-hidden='true') ×
									h4#myModalLabel.modal-title Remove Branch
								form(action='/branch/delete', method='POST' id='del-branch')
									.modal-body
										.container-fluid
											.container-fluid(style='padding:1rem 4rem 1rem 4rem;')
												.row
													.col-md-12
														.form-group
															h4 Delete this branch?
															input.hidden#id(type='text' name='id')
															input.hidden#oldid(type='text' name='oldid')

									.modal-footer
										button.btn.btn-default(type='button', data-dismiss='modal') Close
										button.btn.btn-default(id='btn-del-branch') Delete

include ../../../../templates/foot

script.
	$(document).ready(function(){
	$('#memdrop').addClass('active');
	$('#branch').addClass('active');
	});
	
script.

	$('#editmodal').on('show.bs.modal', function(event){
	var button = $(event.relatedTarget)      


	var name = button.data('name')
	var sname = button.data('sname')
	var id = button.data('id')
	var snum=button.data('snum')
	var city=button.data('city')

	let modal = $(this)  
	modal.find('.modal-body #name').val(`${name}`)
	modal.find('.modal-body #sname').val(`${sname}`)
	modal.find('.modal-body #city').val(`${city}`)
	modal.find('.modal-body #snum').val(`${snum}`)
	modal.find('.modal-body #id').val(` ${id}`)
		}) 


script.

	$('#deletemodal').on('show.bs.modal', function(event){
		var button = $(event.relatedTarget)      

	//id
	var id = button.data('id')
	console.log(id)
	var oldid=button.data('oldid')


	let modal = $(this)     

	modal.find('.modal-body #id').val(`${id}`)
	modal.find('.modal-body #oldid').val(`${oldid}`)
	})

	$(document).ready(function(){
		$('#memdrop').addClass('active');
		$('#branch').addClass('active');
	});

	$(document).on('submit', '#btn-add-branch', function(e) {
		var form = $(this).parents('form');
		e.preventDefault();

		swal({
			title: 'Add this new branch?',
			text: 'Branch will be added to this roster.',
			type: 'info', 
			showCancelButton: true,
			cancelButtonColor: '#d33',
			confirmButtonColor: '#3085d6',
			confirmButtonText: 'Yes'
		}).then((result) => {
		if (result.value) {
			swal({
				title: 'Success!',
				text: 'Branch added successfully!',
				type: 'success',
				showConfirmButton: false,
				timer: 1500
			});
			$('#add-branch').submit();
		}                        
		})
	});

		//sweet alert edit class
	$(document).on('click', '#btn-edit-branch', function(e) {
		var form = $(this).parents('form');
		e.preventDefault();

		swal({
		title: 'Save Changes?',
		text: 'Updating this record will overwrite the previous record.',
		type: 'info',
		showCancelButton: true,
		confirmButtonColor: '#3085d6',
		cancelButtonColor: '#d33',
		confirmButtonText: 'Yes'
		}).then((result) => {
		if (result.value) {
			swal({
				title: 'Success!',
				text: 'Branch updated successfully!',
				type: 'success',
				showConfirmButton: false,
				timer: 5000
			});
			$('#edit-branch').submit();
		}                        
		})
	});

		//sweet alert delete class
	$(document).on('click', '#btn-del-branch', function(e) {
		var form = $(this).parents('form');
		e.preventDefault();

		swal({
			title: 'Delete Branch?',
			text: 'You can no longer access this record once deleted.',
			type: 'warning',
			showCancelButton: true,
			confirmButtonColor: '#3085d6',
			cancelButtonColor: '#d33',
			confirmButtonText: 'Yes'
		}).then((result) => {
		if (result.value) {
			swal({
				title: 'Success!',
				text: 'Branch deleted successfully!',
				type: 'success',
				showConfirmButton: false,
				timer: 5000
			});
		//- swal("Success!", "Class Deleted!", "success");
			$('#del-branch').submit();
		}                        
		})
	});