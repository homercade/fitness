block main

  section#main-content
    section.wrapper.site-min-height
      .row.mt
        .col-md-12
          .content-panel
            .container-fluid
              table.table.table-striped.table-advance.table-hover
                h4
                  | All Trainers
                  button.btn.btn-theme(style='margin-left: 5px;', type='button', data-toggle='modal', data-target='#add')
                    i.fa.fa-user-plus
                    |  Add Trainer
                thead
                tr
                  th
                    i.fa.fa-user
                    |  Name
                  th
                    i.fa.fa-calendar-alt
                    |  Birthday
                  th
                    i.fa.fa-calendar-alt
                    |  Schedule 
                  th
                    i.fa.fa-calendar-alt
                    |  Time Available
                  th
                    i.fa.fa-edit
                    |  Action
                tbody
                  each tr in trains 
                    tr
                      td #{tr.trainerfname} #{tr.trainerlname}
                      td #{tr.trainerbday}
                      td #{tr.trainerschedule}
                      td #{tr.trainertimestart} - #{tr.trainertimeend}
                      td
                        button#edit.btn.btn-success.btn-xs(data-toggle='modal', data-trigger='hover', data-placement='top', data-content='Edit Trainer', data-target='#editmodal' data-fname=tr.trainerfname data-mob=tr.trainermobile  data-lname=tr.trainerlname data-email=tr.traineremail data-addr=tr.traineraddress data-bday=tr.trainerbday data-id=tr.trainerid 
                        data-username=tr.trainerusername data-pass=tr.trainerpassword)
                          i.fa.fa-edit
                        button.btn.btn-danger.btn-xs(data-toggle='modal', data-trigger='hover', data-placement='top', data-content='Remove Account Permanently' data-target='#deletemodal' data-id=tr.userid)
                          i.fa.fa-trash-alt

  // MODAL ADD 
  #add.modal.fade(tabindex='-1', role='dialog', aria-labelledby='myModalLabel', aria-hidden='true')
    .modal-dialog.modal-lg
      .modal-content
        .modal-header
          button.close(type='button', data-dismiss='modal', aria-hidden='true') ×
          h4#myModalLabel.modal-title Register a Trainer
        form.needs-validation(action='/trains', method='POST', autocomplete="off" id='add-trainer' novalidate enctype='multipart/form-data')
          .modal-body
            .container-fluid
              .row
                .col-xs-12
                  h5 Personal Info
                  hr
              .container-fluid(style='padding:1rem 4rem 1rem 4rem;')
                .row
                  .col-md-6
                    .form-group
                      label.control-label First Name
                      input.form-control.addDisable(type='text' name='fname' required)
                  .col-md-6
                    .form-group
                      label.control-label Last Name
                      input.form-control.addDisable(type='text' name='lname' required)
                .row
                  .col-md-6
                    .input-group
                      .input-group-addon Gender:
                      label.radio
                        | Male
                        input(type='radio', checked='', name='gen' value='Male')
                        span.dot
                      label.radio
                        | Female
                        input(type='radio', name='gen' value='Female')
                        span.dot
                  .col-md-6
                    .form-group
                      label.control-label Date of Birth
                      input.date.form-control.addDisable(type='text' name='bday' required)
                .row
                  .col-md-12
                    .form-group
                      label.control-label Address
                      input.form-control.addDisable(type='text' name='addr' maxlength='105' required)
                .row
                  .col-md-6
                    .form-group
                      label.control-label Mobile Number
                      input.form-control.addDisable(type='number' name='mobile' maxlength='11' required)
                  .col-md-6
                    .form-group
                      label.control-label Email
                      input.form-control.addDisable(type='email' name='email' onkeypress='return restrictCharacters(this, event, emailOnly)' required)
                .row
                  .col-md-6
                    .form-group
                      label.control-label Branch
                      select.form-control(name='branchid' required)
                        option.hidden(value='') Select Branch... 
                        each br in drops
                          option(value=''+br.branchID) #{br.branchname}
                  .col-md-6(style="position:relative!important; height:60px!important")
                    .form-group
                      label.control-label Specialization
                      select.select.form-control(name='specialid' required)
                        option.hidden(value='') Select Specialty... 
                        each sp in spes
                          option(value=''+sp.specialID) #{sp.specialname}
                .row
                  .col-md-6
                    .form-group
                      label.control-label Start Time
                      input.form-control.time(type="time" name='starttime' value=utils.starttime required)

                  .col-md-6
                    .form-group
                      label.control-label End Time
                      input.form-control.time(type="time" name='endtime' value=utils.endtime required)

                .row#d
                  .input-group
                    span.input-group-addon
                      | Work Days:
                    label.checkbox
                      | Monday
                      input(type='checkbox', name='sched[]' ,value='1')
                      span.check
                    label.checkbox
                      | Tuesday
                      input(type='checkbox', name='sched[]', value='2')
                      span.check
                    label.checkbox
                      | Wednesday
                      input(type='checkbox', name='sched[]', value='3')
                      span.check
                    span.input-group-addon
                    label.checkbox
                      | Thursday
                      input(type='checkbox', name='sched[]',value='4')
                      span.check
                    label.checkbox
                      | Friday
                      input(type='checkbox', name='sched[]',value='5')
                      span.check
                    label.checkbox
                      | Saturday
                      input(type='checkbox', name='sched[]',value='6')
                      span.check
                    span.input-group-addon
                    label.checkbox
                      | Sunday
                      input(type='checkbox',name='sched[]', value='0')
                      span.check
              .row
                .col-md-12
                  h5 Login Information
                  hr
              .container-fluid(style='padding:1rem 4rem 1rem 4rem;')
                .row
                  .col-md-6
                    .form-group
                      label.control-label Username
                      input.form-control.addDisable(type='text' name='username' maxlength='25' required)
                  .col-md-6
                    .form-group
                      label.control-label Password
                      input.form-control(type='password' name='password' autocomplete="new-password" required)
                .row
                  .col-md-4
                    | Upload your Image 
                    input#upload(type='file', name='img' ,accept="image/*" required)
          .modal-footer
            button.btn.btn-default(type='button', data-dismiss='modal') Close
            button.btn.btn-primary(id='btn-add-trainer' type='submit') Add Trainer
  // MODAL VIEW MEMBER
  #viewmodal.modal.fade(tabindex='-1', role='dialog', aria-labelledby='myModalLabel', aria-hidden='true')
    .modal-dialog
      .modal-content
        .modal-header
          button.close(type='button', data-dismiss='modal', aria-hidden='true') ×
          h4#myModalLabel.modal-title Trainer Description
        form(action='', method='POST')
          .modal-body
            .container-fluid
              .row
                .col-md-12
                  br
                  img.img-circle(src='../assets/img/ui-sam.jpg', width='200x;', style='margin-left:30%;')
                  br
                  br
                  hr
              .container-fluid
                .row
                  h5
                    br
                    b Gender:
                    span#gen
                    br
                    br
                    b Address:
                    span#addr
                    br
                    br
                    b Mobile Number:
                    span#mob
                    br
                    br
                    b E-mail Address:
                    span#email
                    br
                    br
                    b Branch:
                    span#bra
                    br
                    br
                    b Specialization:
                    span#spe
                    br
                    br
                    b Work Days:
                    span#sched
                    br
          .modal-footer
            button.btn.btn-default(type='button', data-dismiss='modal') Close
  // MODAL EDIT MEMBER
  #editmodal.modal.fade(tabindex='-1', role='dialog', aria-labelledby='myModalLabel', aria-hidden='true')
    .modal-dialog.modal-lg
      .modal-content
        .modal-header
          button.close(type='button', data-dismiss='modal', aria-hidden='true') ×
          h4#myModalLabel.modal-title Edit a Trainer
        form(action='/trains/edit', method='POST' id='edit-trainer')
          .modal-body
            .container-fluid
              .row
                .col-xs-12
                  h5 Personal Info
                  hr
              .container-fluid(style='padding:1rem 4rem 1rem 4rem;')       
                .row
                  .col-md-6
                    .form-group
                      label.control-label First Name
                      input#fname.form-control.addDisable(type='text' name='fname' maxlength='35' required)
                      input.hidden#id(type='text' name='id')
                  .col-md-6
                    .form-group
                      label.control-label Last Name
                      input#lname.form-control.addDisable(type='text' name='lname' maxlength='35' required)
                .row
                  .col-md-6
                    .input-group
                      .input-group-addon Gender:
                      label.radio
                        | Male
                        input(type='radio', checked='', name='gen' value='male')
                        span.dot
                      label.radio
                        | Female
                        input(type='radio', name='gen' value='female')
                        span.dot
                  .col-md-6
                    .form-group
                      label.control-label Date of Birth
                      input#bday.date.form-control(type='text' name='bday')
                .row
                  .col-md-12
                    .form-group
                      label.control-label Address
                      input#addr.form-control.addDisable(type='text' name='addr' maxlength='105' required)
                .row
                  .col-md-6
                    .form-group
                      label.control-label Mobile Number
                      input#mob.form-control.addDisable(type='text' placeholder='09xxxxxxxxx' name='mobile' onkeypress='return restrictCharacters(this, event, numOnly)' maxlength='13' required)
                  .col-md-6
                    .form-group
                      label.control-label Email
                      input#email.form-control.addDisable(type='email' name='email' onkeypress='return restrictCharacters(this, event, emailOnly)' required)
                .row  
                  .col-md-12(style="position:relative!important; height:60px!important")
                    .form-group
                      label.control-label Specialization
                      select.select.form-control.addDisable(name='specialid' multiple="multiple")
                        each sp in spes
                          option(value=''+sp.specialID) #{sp.specialname}
              .row
                .col-md-12
                  h5 Login Information
                  hr
              .container-fluid(style='padding:1rem 4rem 1rem 4rem;')
                .row
                  .col-md-6
                    .form-group
                      label.control-label Username
                      input.form-control.addDisable(type='text' name='username' required)#username
                  .col-md-6
                    .form-group
                      label.control-label Password
                      input.form-control(type='password' name='pass' required)#password
                .row  
                 
                  .col-md-4
                    label(for='file') Display Image
                    input.inputfile(type='file')
          .modal-footer
            button.btn.btn-default(type='button', data-dismiss='modal') Close
            button.btn.btn-primary(id='btn-edit-trainer') Save

  // MODAL DELETE
  #deletemodal.modal.fade(tabindex='-1', role='dialog', aria-labelledby='myModalLabel', aria-hidden='true')
    .modal-dialog
      .modal-content
        .modal-header
          button.close(type='button', data-dismiss='modal', aria-hidden='true') ×
          h4#myModalLabel.modal-title Remove Trainer
        form(action='/trains/delete', method='POST' id='del-trainer')
          .modal-body
            .container-fluid
              .container-fluid(style='padding:1rem 4rem 1rem 4rem;')
                .row
                  .col-md-12
                    .form-group
                      h4 Delete this trainer?
                      input.hidden(type='text' name='id')


          .modal-footer
            button.btn.btn-default(type='button', data-dismiss='modal') Close
            button.btn.btn-default(id='btn-del-trainer') Delete
  //- FROM UTILITIES
  input#trainerschedule.hidden(value=utils.workdays)

