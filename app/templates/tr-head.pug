extends ./tr-sub-head

block main	
	#navbar-hidden
		.container
			a.icon(href='/trainer')
				img.img-circle.xs(src='../../assets/img/icon.png', style='border:3px solid white;', alt='')
				b(style='font-size:15pt;margin-left: 10px; letter-spacing: 1px;') #{utils.gymname}
			span#header_inbox_bar.dropdown
				a.bell.dropdown-toggle(data-toggle='dropdown', href='#')
					i.fa.fa-bell 
					- let hasUnreadNotifs = false
					- let hasNotif = false
					- let unreadNotifsCount = 0
					each notif in notifs
						if notif.notifstatus == 'unread'
							- hasUnreadNotifs = true
							- unreadNotifsCount += 1
					if hasUnreadNotifs
						span.badge.bg-theme #{unreadNotifsCount}
				ul.dropdown-menu.extended.inbox
					li
						p(style="background-color:#FFF") 
							| All Notifications 
					if notifs.length !== 0
						each n in notifs
							if n.notifstatus === 'unread'
								- console.log('from ', n )
								li(style="background-color:#F1F2F7")
									a(href='#')
										span.message
										| <b> #{n.userfname} #{n.userlname} </b> #{n.notifdesc}
										span.message
										| at #{n.notiftime}
										span.subject
											span.from
											span.time  #{n.notifdate}
								
							else 
								li(style="background-color:#FFF")
									a(href='#')
										span.message
										| <b> #{n.userfname} #{n.userlname} </b> #{n.notifdesc}
										span.message
										| at #{n.notiftime}
										span.subject
											span.from
											span.time  #{n.notifdate}
					else
						li(style="background-color: #FFF2E5; border-radius: 5px;")
							a(href='#')
								span.subject
								center
									span.message
										| No notifications yet
					
			div(style='float:right')
				span.sm(style='font-size: 12pt;')
					| Hello, 
					b #{hello.trainerfname} #{hello.trainerlname}!
				span.dropdown
					img.img-circle.dropdown-toggle(data-toggle='dropdown', src='/assets/img/ui-zac.jpg', alt='')
					ul.dropdown-menu.extended.tasks-bar(style='z-index:2000; position:absolute; top:30px;')

						li
							a(href='/logout')
								.task-info
									.desc
										span.li_lock
										| Logout
	#navbar
		.container
			a(href='/trainer')
				span.li_calendar
				|  Calendar
			a(href='/trainer/trainee')
				span.li_user
				| Trainee
			a(href='/trainer/pending')
				span.li_megaphone
				| Pending Request



